<% flash.each do |name, msg| %>
  <div id="flash-<%= name %>" class="fixed top-4 right-0 left-0 mx-auto max-w-md z-50 animate-slide-down">
    <div class="relative bg-blue-100 border border-blue-500 text-blue-700 px-6 py-3 rounded-lg shadow-lg">
      <div>
        <p class="font-bold text-blue-800">You did it!</p>
        <p class="text-sm mt-1"><%= msg %></p>
      </div>
      
      <button type="button" onclick="document.getElementById('flash-<%= name %>').remove();" class="absolute top-3 right-3 text-blue-500 hover:text-blue-700 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        <span class="sr-only">Dismiss message</span>
      </button>
    </div>
  </div>
  
  <script>
    // Auto-hide after 5 seconds
    setTimeout(function() {
      var flashElement = document.getElementById('flash-<%= name %>');
      if (flashElement) {
        flashElement.classList.add('animate-slide-up');
        setTimeout(function() { 
          if (flashElement) flashElement.remove(); 
        }, 500);
      }
    }, 5000);
  </script>
<% end %>

<style>
  .animate-slide-down {
    animation: slideDown 0.5s ease-out forwards;
  }
  
  .animate-slide-up {
    animation: slideUp 0.5s ease-out forwards;
  }
  
  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  @keyframes slideUp {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(-100%);
      opacity: 0;
    }
  }
</style>
